---
import '../styles/base.css'
import { Icon } from 'astro-icon/components'
import Button, { type Color } from '../components/nav/button.astro';
import Menu from '../components/nav/menu.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

const pages = [
	{
		title: 'Dawid Seipold',
		href: '/',
		icon: 'home',
		color: 'secondary'
	},
	{
		title: 'About',
		href: '/about',
		icon: 'about',
		color: 'info'
	},
	{
		title: 'Projects',
		href: '/projects',
		icon: 'projects',
		color: 'warning'
	},
	{
		title: 'Blog',
		href: '/blog',
		icon: 'blog',
		color: 'success'
	},
	{
		title: 'Contact',
		href: '/contact',
		icon: 'contact',
		color: 'error'
	},
]

const {pathname} = Astro.url
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	
	<body class="p-4 pb-28 xs:p-8 xs:pb-28 flex min-h-screen justify-center items-center font-hind">
		<div class="z-10 max-w-6xl w-full mx-auto">
			<Menu pages={pages} pathname={pathname} />
			<slot />
		</div>
	</body>
</html>

<style>
	@font-face {
  font-family: 'Poppins-Variable';
  src: url('/fonts/poppins/Poppins-Variable.woff2') format('woff2'),
       url('/fonts/poppins/Poppins-Variable.woff') format('woff'),
       url('/fonts/poppins/Poppins-Variable.ttf') format('truetype');
  font-weight: 100 900;
  font-display: swap;
  font-style: normal;
}


	@font-face {
		font-family: 'Hind-Variable';
		src: url('/fonts/hind/Hind-Variable.woff2') format('woff2'),
				url('/fonts/hind/Hind-Variable.woff') format('woff'),
				url('/fonts/hind/Hind-Variable.ttf') format('truetype');
		font-weight: 300 700;
		font-display: swap;
		font-style: normal;
	}

</style>